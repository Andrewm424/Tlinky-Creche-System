@{
    ViewData["Title"] = "Payments";
}

<div class="card">
    <div class="flex-between">
        
        <div style="display:flex;gap:8px;align-items:center">
            <select id="monthSelect" class="search" onchange="loadPaymentsByMonth(this.value)"></select>
            <button class="btn" id="btnRegenerate" title="Generate/Refresh month">Generate</button>
        </div>
    </div>

    <table class="table" style="margin-top:10px">
        <thead>
            <tr>
                <th>Parent</th>
                <th>Child</th>
                <th>Month</th>
                <th>Fee</th>
                <th>Status</th>
                <th>Proof</th>
                <th style="width:260px">Actions</th>
            </tr>
        </thead>
        <tbody id="paymentsTableBody">
            <tr><td colspan="7">Loading...</td></tr>
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="~/js/payments.js"></script>
}
