@{
    ViewData["Title"] = "Login";
    Layout = null; // Disable layout for full-screen login
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Tlinky Admin – Login</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <style>
        body {
            margin: 0;
            height: 100vh;
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #2563EB 0%, #1E3A8A 100%);
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-card {
            width: 420px;
            background: #fff;
            border-radius: 16px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.15);
            padding: 40px 32px;
            animation: fadeIn 0.8s ease;
        }

            .login-card h2 {
                font-family: 'Poppins', sans-serif;
                font-size: 26px;
                margin-bottom: 8px;
                color: #111827;
            }

            .login-card p {
                color: #6B7280;
                font-size: 14px;
                margin-bottom: 24px;
            }

            .login-card .search {
                width: 100%;
                margin-bottom: 16px;
                padding: 12px;
                border: 1px solid #E5E7EB;
                border-radius: 10px;
                font-size: 15px;
            }

            .login-card .btn {
                width: 100%;
                font-size: 16px;
                padding: 12px;
                border-radius: 10px;
                margin-top: 10px;
            }

        .error-banner {
            color: #EF4444;
            background: #FEE2E2;
            padding: 10px;
            border-radius: 8px;
            margin-bottom: 15px;
            text-align: center;
            font-size: 14px;
        }

        .login-card {
            text-align: center;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

            .login-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 15px 30px rgba(0,0,0,0.2);
            }

        .btn.primary:hover {
            background: #1E40AF;
        }


        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>
<body>

    <div class="login-card" style="text-align:center;">
        <!-- 🎓 Replace image with icon -->
        <i class="bi bi-mortarboard-fill"
           style="font-size:70px; color:#2563EB; margin-bottom:12px;"></i>

        <h2>Tlinky Admin</h2>
        <p>Sign in to manage the crèche system</p>

        @if (ViewBag.Error != null)
        {
            <div class="error-banner">❌ @ViewBag.Error</div>
        }

        <form asp-controller="Login" asp-action="Authenticate" method="post">
            <input type="email" name="Email" class="search" placeholder="Email address" required />

            <div style="position:relative">
                <input type="password" id="password" name="Password" class="search" placeholder="Password" required />
                <span onclick="togglePassword()"
                      style="position:absolute; right:12px; top:12px; cursor:pointer; color:#6B7280">👁️</span>
            </div>

            <div style="text-align:left; margin:8px 0">
                <input type="checkbox" id="rememberMe" /> <label for="rememberMe">Remember me</label>
            </div>

            <button type="submit" class="btn primary"
                    style="background:#2563EB; color:#fff; border:none;">
                Login
            </button>
        </form>

        <a href="#" style="display:block; margin-top:12px; font-size:13px; color:#2563EB; text-decoration:none;">
            Forgot your password?
        </a>

        <p style="margin-top:20px; font-size:12px; color:#9CA3AF">
            © 2025 Tlinky Crèche • Ivory Park
        </p>
    </div>


    <script>
        function togglePassword() {
            var input = document.getElementById("password");
            input.type = input.type === "password" ? "text" : "password";
        }
    </script>

</body>
</html>
